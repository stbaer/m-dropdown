  },
  "license": "MIT",
  "files": [
    "src",
    "dist",
    "index.html",
    "example.html"
  ],
  "keywords": [
    "m-dropdown",
    "dropdown",
    "menu"
  ],
  "dependencies": {},
  "devDependencies": {
    "beefy": "^2.1.5",
    "browserify": "^11.0.1",
    "del": "^1.2.1",
    "gulp": "^3.9.0",
    "gulp-autoprefixer": "^2.3.1",
    "gulp-csso": "^1.0.0",
    "gulp-jshint": "^1.11.2",
    "gulp-less": "^3.0.3",
    "gulp-load-plugins": "^1.0.0-rc.1",
    "gulp-rename": "^1.2.2",
    "gulp-size": "^2.0.0",
    "gulp-watch": "^4.3.5",
    "jshint-stylish": "^2.0.1",
    "require-dir": "^0.3.0",
    "uglifyjs": "latest"
  },
  "scripts": {
    "uglify:dist": "uglifyjs ./dist/m-dropdown.js > ./dist/m-dropdown.min.js",
    "uglify": "npm run uglify:dist && npm run show-gzipped-minjs-size",
    "show-gzipped-minjs-size": "echo \"js minified and gzipped: \" && gzip -c dist/m-dropdown.min.js | wc -c",
    "example": "beefy test/visual.js --index=example.html --live",
    "example-standalone": "beefy --index=exampleStandalone.html",
    "build": "gulp clean && gulp styles && browserify src/js/index.js --standalone mDropdown > dist/m-dropdown.js && npm run uglify",
    "test": "gulp test",
    "start": "npm run build && npm run example"
  }
}
